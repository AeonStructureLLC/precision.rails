<%
   if defined? editable
     content_editable = ""
     drag_class = "drag_handle aeon_drag"
     deletable = "deletable_product"
     editable = true
   else
     content_editable = ""
     drag_class = "drag_handle aeon_drag"
     deletable = ""
     editable = false
   end

   if product_listing.description.blank?
     description = ""
   else
     description = product_listing.description.html_safe
   end
%>
<li class='product_listing <%= deletable %>' model='product' model_id='<%= product_listing.id %>' model_root='true'>
  <div class='<%= drag_class %>'></div>
  <div class='cover_image_wrapper'><img class='cover_image' src='<%= product_listing.cover_image_src %>'/></div>
  <div class='attribute title' model='product' model_id='<%= product_listing.id %>' attribute_name='title' attribute_type='text' <%= content_editable %>><%= product_listing.title.html_safe %></div>
  <div class='attribute description' model='product' model_id='<%= product_listing.id %>' attribute_name='description' attribute_type='text' <%= content_editable %>><%= description %></div>
  <div class='attribute price' model='product' model_id='<%= product_listing.id %>' attribute_name='price' attribute_type='text' <%= content_editable %>>$<%= product_listing.price %></div>
</li>